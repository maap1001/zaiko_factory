<!-- MODAL CREAR PRODUCTO -->
<!--========================================================== -->

<div class="modal fade" id="crearProducto" tabindex="-1" aria-labelledby="registerLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="container mt-5 p-4">
                <h2>Registrar Producto</h2>
                <form id="formCrearProducto" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="nombreProductoCrear" class="form-label">Nombre del Producto</label>
                        <input type="text" class="form-control" name="nombreProductoCrear" id="nombreProductoCrear" placeholder="Ingresa el nombre del producto" required>
                    </div>
                    <div class="mb-3">
                        <label for="imagen" class="form-label">Foto</label>
                        <input type="file" class="form-control" id="imagen" name="imagen">
                    </div>
                    <div class="mb-3">
                        <label for="precioProductoCrear" class="form-label">Precio</label>
                        <input type="number" class="form-control" name="precioProductoCrear" id="precioProductoCrear" placeholder="Ingresa el precio del producto" required min="0">
                    </div>
                    <div class="mb-3">
                        <label for="cantidadProductoCrear" class="form-label">Cantidad</label>
                        <input type="number" class="form-control" name="cantidadProductoCrear" id="cantidadProductoCrear" placeholder="Ingresa la cantidad del producto" required min="0">
                    </div>
                    <div class="mb-3">
                        <label for="fechaVencimientoProductoCrear" class="form-label">Fecha de Vencimiento</label>
                        <input type="date" class="form-control" name="fechaVencimientoProductoCrear" id="fechaVencimientoProductoCrear">
                    </div>
                    <div class="mb-3">
                        <label for="categoriaProductoCrear" class="form-label">Categoría</label>
                        <select class="form-select" name="categoriaProductoCrear" id="categoriaProductoCrear" required>
                            <option value="" disabled selected>Seleccione la categoría</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="proveedorProductoCrear" class="form-label">Proveedor</label>
                        <select class="form-select" name="proveedorProductoCrear" id="proveedorProductoCrear" required>
                            <option value="" disabled selected>Seleccione el proveedor</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="estadoProductoCrear" class="form-label">Estado</label>
                        <select class="form-select" name="estadoProductoCrear" id="estadoProductoCrear">
                            <option value="disponible">Disponible</option>
                            <option value="agotado">Agotado</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-between" style="margin-bottom: 10px;">
                        <button type="submit" class="btn btn-success">Crear Producto</button>
                        <a id="cerrarModalCrearProducto" class="btn btn-danger">Cancelar</a>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>

