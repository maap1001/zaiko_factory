<!--MODAL EDITAR ALMACEN-->
<!--========================================================== -->

<div class="modal fade" id="editarAlmacen" tabindex="-1" aria-labelledby="editarAlmacenLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="container mt-5 p-4">
                <h2>Editar Almacén</h2>
                <form id="editarAlmacenForm">
                    <div class="mb-3">
                        <label for="editarAlmacenCodigo" class="form-label">Código de Ubicación</label>
                        <input type="text" class="form-control" id="editarAlmacenCodigo" name="editarAlmacenCodigo" required minlength="3">
                    </div>
                    <div class="mb-3">
                        <label for="editarAlmacenPasillo" class="form-label">Pasillo</label>
                        <input type="text" class="form-control" id="editarAlmacenPasillo" name="editarAlmacenPasillo" required>
                    </div>
                    <div class="mb-3">
                        <label for="editarAlmacenSeccion" class="form-label">Sección</label>
                        <input type="text" class="form-control" id="editarAlmacenSeccion" name="editarAlmacenSeccion" required>
                    </div>
                    <div class="mb-3">
                        <label for="editarAlmacenEstante" class="form-label">Número de Estante</label>
                        <input type="number" class="form-control" id="editarAlmacenEstante" name="editarAlmacenEstante" required min="1">
                    </div>
                    <div class="mb-3">
                        <label for="editarAlmacenNivel" class="form-label">Nivel</label>
                        <input type="number" class="form-control" id="editarAlmacenNivel" name="editarAlmacenNivel" required min="1">
                    </div>
                    <div class="mb-3">
                        <label for="editarAlmacenCapacidad" class="form-label">Capacidad</label>
                        <input type="number" class="form-control" id="editarAlmacenCapacidad" name="editarAlmacenCapacidad" required min="1">
                    </div>
                    <div class="mb-3">
                        <label for="editarAlmacenOcupacion" class="form-label">Ocupación Actual</label>
                        <input type="number" class="form-control" id="editarAlmacenOcupacion" name="editarAlmacenOcupacion" required min="0">
                    </div>
                    <div class="mb-3">
                        <label for="editarAlmacenProducto" class="form-label">Producto Asociado</label>
                        <select class="form-select" id="editarAlmacenProducto" name="editarAlmacenProducto">
                            <option value="">Sin Producto</option>
                        </select>
                    </div>
                    <div class="d-flex justify-content-between" style="margin-bottom: 10px;">
                        <button type="submit" class="btn btn-success">Guardar Cambios <i class="fa-solid fa-check"
                                style="margin-left: 10px;"></i></button>
                        <a id="cerrarModalEditarAlmacen" class="btn btn-danger">Cancelar</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<!------------------------------SCRIPTS----------------------------->

<script src="/js/admin/almacenes/editarAlmacenes.js"></script>
