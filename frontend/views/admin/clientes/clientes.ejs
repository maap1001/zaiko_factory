<div id="layoutSidenav_content">
    <div class="container-fluid px-4">

        <div class="container my-5 contenedorCentrado tablas-formularios">
            <div class="row" style="padding: 20px;">
            
                <table id="example" class="table table-striped">
                    <caption>
                        Clientes
                    </caption>
                    <thead>
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Documento</th>
                            <th scope="col">Tel√©fono</th>
                            <th scope="col">Correo</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (clientes.length > 0) { %>
                            <% clientes.forEach(cliente => { %>
                                <tr>
                                    <td><%= cliente.nombre %></td>
                                    <td><%= cliente.documento %></td>
                                    <td><%= cliente.telefono %></td>
                                    <td><%= cliente.correo %></td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group" aria-label="Acciones">
                                            <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#detalleCliente"
                                                data-id="<%= cliente._id %>">
                                                <i class="fa-solid fa-eye"></i> Detalles
                                            </a>
                                            <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editarCliente"
                                                data-id="<%= cliente._id %>"
                                                data-nombre="<%= cliente.nombre %>"
                                                data-documento="<%= cliente.documento %>"
                                                data-telefono="<%= cliente.telefono %>"
                                                data-correo="<%= cliente.correo %>"
                                                data-direccion="<%= cliente.direccion %>">
                                                <i class="fa-solid fa-user-pen"></i> Editar
                                            </button>
                                            <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#eliminarCliente"
                                                data-id="<%= cliente._id %>">
                                                <i class="fa-solid fa-trash"></i> Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
                
                <a
                    data-bs-toggle="modal" data-bs-target="#crearCliente"
                    class="btn btn-success btn-crear">
                    Registrar cliente
                    <i 
                    class="fa-solid fa-plus" 
                    style="margin-left: 9px;">
                    </i>
                </a>
            </div>
        </div>
        
    </div>    
</div>

