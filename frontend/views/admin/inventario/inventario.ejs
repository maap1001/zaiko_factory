<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <div class="container my-5 contenedorCentrado tablas-formularios">
                <div class="row" style="padding: 20px;">
                    <table id="example" class="table table-striped">
                        <caption>
                            Inventario
                        </caption>
                        <thead>
                            <tr>
                                <th scope="col">Producto</th>
                                <th scope="col">Cantidad</th>
                                <th scope="col">Ubicaci√≥n</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (inventario && inventario.length > 0) { %>
                                <% inventario.forEach(item => { %>
                                    <tr>
                                        <td><%= item.producto.nombre %></td>
                                        <td><%= item.cantidad %></td>
                                        <td><%= item.ubicacion.codigo %></td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group" aria-label="Acciones">
                                                <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#detalleInventario"
                                                    data-id="<%= item._id %>">
                                                    <i class="fa-solid fa-eye"></i> Detalles
                                                </a>

                                                <a class="btn btn-warning" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#editarInventario"
                                                    data-id="<%= item._id %>"
                                                    data-cantidad="<%= item.cantidad %>"
                                                    data-ubicacion="<%= item.ubicacion %>" 
                                                    data-producto="<%= item.producto %>">
                                                    <i class="fa-solid fa-user-pen"></i> Editar
                                                </a>

                                                <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#eliminarInventario"
                                                    data-id="<%= item._id %>">
                                                    <i class="fa-solid fa-trash"></i> Eliminar
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                    <a
                        data-bs-toggle="modal" data-bs-target="#crearInventario"
                        class="btn btn-success btn-crear">
                        Agregar al Inventario
                        <i 
                        class="fa-solid fa-plus" 
                        style="margin-left: 9px;">
                        </i>
                    </a>
                </div>        
            </div>
        </div>
    </main>
</div>

